.unity-image {
	--unity-image-size: scale-to-fit;
}

.base {
	position: absolute;
	top: 25%;
	width: 100%;
}

.inner-group {
	flex-direction: row;
	justify-content: center;
	margin-top: 150px;
}

.field {
	position: relative;
	font-size: 60px;

	width: 80%;
	height: 100px;

	margin-left: auto;
	margin-right: auto;
}

.button {
	position: relative;
	font-size: 60px;
	-unity-font-style: bold;

	width: 35%;
	height: 100px;
	margin-left: 15px;
	margin-right: 15px;
}

#Logo {
	--unity-image: url("/Assets/Sprites/Extras/Logo.png");
	position: relative;
	width: 80%;
	height: auto;
	margin: auto;
}

#Username {
	margin-top: 100px;
}

#Password {
	margin-top: 40px;
}

#Login {
	background-color: white;
}

#Register {
	background-color: red;
	color: white;
}
